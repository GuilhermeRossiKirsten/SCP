{
  "name": "scp",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "npm run services:up && npm run services:wait:database && npm run migrations:up && concurrently --names next,gracefulShutdown \"next dev\"  \"node infra/scripts/gracefulShutdown.js\"",
    "test": "npm run services:up && concurrently --names next,jest --hide next --kill-others --success command-jest \"next dev\" \"jest --runInBand --verbose\"",
    "posttest": "npm run services:stop",
    "test:watch": "jest --watchAll --runInBand --verbose",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "services:wait:database": "node infra/scripts/wait-for-postgres.js",
    "migrations:create": "node-pg-migrate --migrations-dir infra/migrations create",
    "migrations:up": "node-pg-migrate --migrations-dir infra/migrations --envPath .env.development up",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "next lint --dir .",
    "prepare": "husky",
    "commit": "cz"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@emailjs/browser": "^4.4.1",
    "@faker-js/faker": "^10.0.0",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@types/three": "^0.180.0",
    "@vercel/analytics": "^1.5.0",
    "async-retry": "1.3.3",
    "bcryptjs": "3.0.2",
    "class-variance-authority": "^0.7.1",
    "dotenv": "16.4.7",
    "dotenv-expand": "12.0.1",
    "framer-motion": "^12.23.22",
    "geist": "^1.5.1",
    "lucide-react": "^0.544.0",
    "next": "^15.5.4",
    "node-pg-migrate": "7.9.1",
    "pg": "8.14.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "swr": "^2.3.3",
    "tailwind-merge": "^3.3.1",
    "three": "^0.180.0",
    "tw-animate-css": "^1.4.0",
    "uuid": "11.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.0",
    "@commitlint/config-conventional": "19.8.0",
    "@tailwindcss/postcss": "^4.1.14",
    "@types/css-modules": "^1.0.5",
    "@types/react": "19.2.0",
    "autoprefixer": "^10.4.21",
    "commitizen": "4.3.1",
    "concurrently": "9.1.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "9.24.0",
    "eslint-config-next": "15.3.0",
    "eslint-config-prettier": "10.1.1",
    "eslint-plugin-jest": "28.11.0",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "postcss": "^8.5.6",
    "prettier": "3.5.3",
    "tailwindcss": "^4.1.14"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
